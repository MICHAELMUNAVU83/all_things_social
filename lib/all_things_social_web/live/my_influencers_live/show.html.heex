          <p class="text-[#F59E0B] font-semibold">
            Add task
          </p>
        </div>
      <% end %>

      <div
        class="bg-[#E8D8F4] flex justify-center hover:scale-105 transition-all ease-in-out duration-500  cursor-pointer items-center  p-2 rounded-xl"
