          </div>
        <% else %>
          <div
            phx-click="change_state"
            phx-value-id="rates"
            class="bg-gray-100 px-4 py-2 cursor-pointer  text-black rounded-3xl"
          >
            Rates
          </div>
        <% end %>

        <%= if @state == "niches" do %>
          <div
            phx-click="change_state"
            phx-value-id="niches"
            class="bg-[#887CF2] px-4 py-2 cursor-pointer  text-white rounded-3xl"
