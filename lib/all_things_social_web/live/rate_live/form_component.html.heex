<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="rate-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :platform %>
    <%= text_input f, :platform %>
    <%= error_tag f, :platform %>
  
    <%= label f, :description %>
    <%= text_input f, :description %>
    <%= error_tag f, :description %>
  
    <%= label f, :amount %>
    <%= text_input f, :amount %>
    <%= error_tag f, :amount %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
